@model ClassificationSystem.Models.Catalog

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы точно хотите удалить этот элемент?</h3>
<div>
    <h4>Каталог</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Goal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Goal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Advantages)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Advantages)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Disadvantages)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Disadvantages)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Обратно к списку</a>
    </form>
</div>
